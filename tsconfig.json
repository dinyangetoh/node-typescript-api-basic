{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "rootDir": "src",
    "outDir": "dist",
    "allowJs": true,
    "sourceMap": true,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "types": ["jest"],
    "importHelpers": true,
    "target": "es2020",
    "lib": [
      "es2020",
      "dom"
    ],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "paths": {

    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules","**/*.spec.ts", "**/*.e2e-spec.ts", "**/*.test.ts", "test/**/*.mock.ts"]
}
